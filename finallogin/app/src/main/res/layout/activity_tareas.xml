<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pauli.finallogin.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_nombre_tarea"
        android:hint="Nombre Tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="" />

    <EditText
        android:id="@+id/edit_duracion"
        android:hint="Duracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_usuario"
        android:hint="Id Usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="" />

    <EditText
        android:id="@+id/edit_fecha"
        android:hint="Fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_insertar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Insertar"/>
            <Button
                android:id="@+id/btn_editar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Editar"/>
            <Button
                android:id="@+id/btn_eliminar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Borrar"/>
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/list_tareas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>