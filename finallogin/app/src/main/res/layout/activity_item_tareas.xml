<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_tarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text="Tarea: "
            android:textSize="22dp" />
        <TextView
            android:id="@+id/text_nombre_tarea"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:text="Nombre Tarea"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_usu_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Creador: "
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text_id_usuario_creador"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Duracion"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_usu_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Editor: "
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text_id_usuario_editor"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_estado_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Estado: "
            android:textSize="22dp" />


        <TextView
            android:id="@+id/text_estado"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_sprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Sprint: "
            android:textSize="22dp" />


        <TextView
            android:id="@+id/text_id_sprint"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_fechaini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Inicio: "
            android:textSize="22dp" />


        <TextView
            android:id="@+id/text_fecha"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="fecha"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_fechafin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@android:color/background_dark"
            android:textStyle="bold"
            android:text=" Fin: "
            android:textSize="22dp" />


        <TextView
            android:id="@+id/text_fecha_fin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="fecha fin"
            android:textSize="20dp" />
    </LinearLayout>




</LinearLayout>